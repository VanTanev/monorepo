{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["./lefthook.yml"],
  "workspaces": {
    "apps/frontend-nextjs": {
      "ignoreDependencies": ["@swc/jest", "eslint-config-next"]
    },
    "packages/config": {
      "entry": ["eslint8.base.mjs"],
      "ignoreDependencies": ["@swc/jest", "@swc/core"]
    },
    "packages/logger": {
      "ignore": ["src/conditions/true.ts"],
      "ignoreDependencies": ["pino"]
    },
    "packages/ui": {
      "entry": ["src/*/index.tsx"]
    }
  }
}
