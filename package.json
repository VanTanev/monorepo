{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">= 22.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "ci": "turbo run test:types lint test --concurrency=50%",
    "dev": "pnpm run -r dev",
    "test:types": "turbo test:types",
    "format": "prettier --write .",
    "prepare": "lefthook install",
    "sherif": "sherif",
    "postinstall": "preconstruct dev",
    "knip": "knip"
  },
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "neverBuiltDependencies": [],
    "allowedDeprecatedVersions": {
      "eslint": "8"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "!packages/config"
    ],
    "___experimentalFlags_WILL_CHANGE_IN_PATCH": {
      "typeModule": true,
      "distInRoot": true,
      "importsConditions": true
    }
  },
  "devDependencies": {
    "@preconstruct/cli": "2.8.12",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "^20",
    "knip": "^5.61.0",
    "lefthook": "^1.10.1",
    "prettier": "3.3.3",
    "pretty-quick": "^4.0.0",
    "sherif": "^1.4.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
