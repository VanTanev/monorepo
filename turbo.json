{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["OS", "RUNNER_OS"],
  "globalPassThroughEnv": ["PLAYWRIGHT_*"],
  "globalDependencies": [".env*.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "test:types": {
      "dependsOn": ["transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
